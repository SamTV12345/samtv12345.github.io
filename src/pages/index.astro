<style>
    :root {
        --bg: #0b0b11;
        --card: #11121a;
        --muted: #a7a7b4;
        --text: #ffffff;
        --ring: 255, 85, 213;
        --accent1: 255, 85, 213;
        --accent2: 90, 161, 255;
        --accent3: 86, 255, 201;
    }

    .hero {
        position: relative;
        display: grid;
        gap: 3rem;
        margin: 0 auto;
        padding: clamp(2rem, 4vw, 3rem);
        width: min(1100px, 100%);
        color: var(--text);
        isolation: isolate;
    }

    .bg-orb {
        position: absolute;
        inset: -20% -10% auto -10%;
        height: 60vh;
        background:
                radial-gradient(45% 60% at 20% 30%, rgba(var(--accent2), 0.15), transparent 60%),
                radial-gradient(40% 50% at 80% 20%, rgba(var(--accent1), 0.18), transparent 65%),
                radial-gradient(35% 55% at 50% 80%, rgba(var(--accent3), 0.14), transparent 70%);
        filter: blur(32px);
        z-index: -2;
        pointer-events: none;
    }

    .bg-grid {
        position: absolute;
        inset: 0;
        background:
                linear-gradient(transparent 49px, rgba(255,255,255,0.06) 50px),
                linear-gradient(90deg, transparent 49px, rgba(255,255,255,0.06) 50px);
        background-size: 50px 50px;
        mask-image: radial-gradient(circle at 50% -20%, rgba(0,0,0,0.75), transparent 65%);
        z-index: -3;
        pointer-events: none;
    }

    .hero__header {
        display: grid;
        place-items: center;
        text-align: center;
        gap: 1rem;
        padding-top: 1rem;
    }

    .avatar {
        width: 132px;
        height: 132px;
        border-radius: 9999px;
        border: 2px solid rgba(255,255,255,0.9);
        box-shadow:
                0 0 0 6px rgba(var(--ring), 0.08),
                0 10px 30px rgba(0,0,0,0.35);
        object-fit: cover;
    }

    .hero__title {
        font-size: clamp(2.2rem, 5vw, 4rem);
        line-height: 1.05;
        margin: 0.25rem 0 0;
        letter-spacing: -0.02em;
    }

    .grad {
        background: linear-gradient(90deg, rgb(var(--accent1)) 0%, rgb(var(--accent2)) 50%, rgb(var(--accent3)) 100%);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 200% 100%;
        animation: sheeny 8s ease-in-out infinite alternate;
    }
    @keyframes sheeny {
        from { background-position: 0% 50%; }
        to   { background-position: 100% 50%; }
    }

    .hero__tagline {
        color: var(--muted);
        margin: 0.25rem 0 0.75rem;
        font-size: clamp(1rem, 2.5vw, 1.25rem);
    }

    .hero__cta {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .btn {
        --pad-x: 1.1rem;
        --pad-y: 0.7rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: var(--pad-y) var(--pad-x);
        border-radius: 999px;
        font-weight: 600;
        text-decoration: none;
        transition: transform 0.15s ease, box-shadow 0.15s ease, background 0.2s ease, color 0.2s ease;
        will-change: transform;
    }
    .btn--primary {
        color: #0b0b11;
        background: linear-gradient(90deg, rgb(var(--accent1)), rgb(var(--accent2)));
        box-shadow: 0 10px 24px rgba(var(--accent2), 0.25), 0 2px 6px rgba(0,0,0,0.25);
    }
    .btn--primary:hover { transform: translateY(-1px) scale(1.01); }
    .btn--ghost {
        color: var(--text);
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.12);
        backdrop-filter: blur(6px);
    }
    .btn--ghost:hover { background: rgba(255,255,255,0.1); transform: translateY(-1px); }

    .showcase {
        display: grid;
        gap: 1.25rem;
    }
    .section-title {
        font-size: clamp(1.25rem, 2.4vw, 1.5rem);
        color: var(--muted);
        letter-spacing: 0.02em;
    }

    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(22ch, 1fr));
        gap: 1.25rem;
        padding: 0;
        list-style: none;
    }
    .marquee {
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.08);
        background: linear-gradient(180deg, rgba(255,255,255,0.04), rgba(255,255,255,0.02));
        padding: 0.75rem 0;
    }

    /* Container hÃ¤lt zwei identische Tracks nebeneinander */
    .marquee__inner {
        display: flex;
        width: max-content;
    }

    .marquee__track {
        display: flex;
        gap: 1rem;
        align-items: center;
        padding-right: 1rem; /* gleicht gap am Ende aus */
    }

    /* Endlos-Animation: verschiebt beide Tracks gemeinsam um 50% ihrer kombinierten Breite */
    .marquee__inner {
        animation: marquee-loop 30s linear infinite;
        will-change: transform;
    }

    @keyframes marquee-loop {
        from { transform: translateX(0); }
        to   { transform: translateX(-50%); }
    }

    .marquee__track img {
        height: 120px;
        width: auto;
        border-radius: 10px;
        object-fit: cover;
        box-shadow: 0 8px 18px rgba(0,0,0,0.35);
        border: 1px solid rgba(255,255,255,0.08);
        background: #0e0f16;
        flex: 0 0 auto;
    }

    @media (max-width: 640px) {
        .marquee__track img { height: 96px; }
    }
    @keyframes slide {
        from { transform: translateX(0); }
        to { transform: translateX(-50%); }
    }

    .footer {
        display: grid;
        place-items: center;
        gap: 0.5rem;
        padding: 1.5rem 0 0.5rem;
        color: var(--muted);
        font-size: 0.95rem;
    }
    .socials {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    .socials__pill {
        color: var(--text);
        text-decoration: none;
        border: 1px solid rgba(255,255,255,0.12);
        padding: 0.45rem 0.8rem;
        border-radius: 999px;
        background: rgba(255,255,255,0.05);
    }

    /* Canvas fÃ¼r den Informatik-Hintergrund */
    .code-bg {
        position: absolute;
        inset: 0;
        z-index: -2; /* unter Content, Ã¼ber bg-grid */
        pointer-events: none;
        opacity: 0.55; /* dezenter Look */
        filter: saturate(1.2);
    }

    .socials__pill:hover { background: rgba(255,255,255,0.08); }

    @media (prefers-reduced-motion: reduce) {
        .grad { animation: none; }
        .marquee__track { animation: none; }
        .btn:hover { transform: none; }
    }

    @media (max-width: 640px) {
        .marquee__track img { height: 96px; }
    }

    /* Page background (if not set globally) */
    :global(body) {
        background: var(--bg);
    }
</style>
